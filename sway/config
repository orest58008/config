for_window [title="Виберіть шлях збереження"] floating enable
for_window [title="Вибрати файл теми qBittorrent"] floating enable
for_window [title="Інформація про падіння"] floating enable
assign [app_id="org.nicotine_plus.Nicotine"] 8

# Misc
bindsym --to-code $mod+l exec wlogout
bindsym --to-code $mod+x exec xeyes
for_window [class="XEyes"] floating enable
for_window [app_id="pavucontrol"] floating enable
for_window [app_id="gxmessage"] floating enable

#
# Autostarting programs
#
exec autotiling 
exec sleep 1 && waybar
exec sleep 2 && firefox &
exec sleep 2 && telegram-desktop &
exec sleep 2 && nicotine &
exec sleep 2 && qbittorrent &

