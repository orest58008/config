for_window [title="Розпакувати архів"] floating enable
for_window [title="Стиснення"] floating enable
for_window [title="Properties"] floating enable
for_window [title="Open Directory"] floating enable

# Calculator
bindsym --to-code $mod+c exec gnome-calculator
for_window [app_id="gnome-calculator"] floating enable

# Browser
bindsym --to-code $mod+b exec firefox
assign [app_id="firefox"] 1
assign [app_id="Firefox"] 1
for_window [title="Firefox - Покажчик спільного доступу"] floating enable
for_window [title="Зображення в зображенні"] floating enable
for_window [title="https://www.deepl.com"] floating enable
# bindsym --to-code $mod+b exec librewolf
assign [app_id="LibreWolf"] 1

